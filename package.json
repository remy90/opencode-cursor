{
  "name": "@nomadcxx/opencode-cursor",
  "version": "2.1.0",
  "description": "No prompt limits. No broken streams. Full thinking + tool support. Your Cursor subscription, properly integrated.",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "dev": "bun build ./src/index.ts --outdir ./dist --target node --watch",
    "test": "bun test",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "discover": "bun run src/cli/discover.ts",
    "prepublishOnly": "bun run build"
  },
  "bin": {
    "cursor-discover": "./dist/cli/discover.js"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "ai": "^6.0.55",
    "@opencode-ai/plugin": "latest",
    "@opencode-ai/sdk": "latest"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.8.0"
  },
  "peerDependencies": {
    "@opencode-ai/sdk": "^1.0.0",
    "bun-types": "^1.1.0"
  },
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nomadcxx/opencode-cursor.git"
  },
  "homepage": "https://github.com/Nomadcxx/opencode-cursor#readme",
  "bugs": {
    "url": "https://github.com/Nomadcxx/opencode-cursor/issues"
  },
  "keywords": [
    "opencode",
    "cursor",
    "ai",
    "streaming",
    "plugin",
    "cursor-agent"
  ],
  "author": "Nomadcxx"
}
